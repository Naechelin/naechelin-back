<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cf.naechelin.mapper.LikeyMapper" >
    <select id="insert" parameterType="Likey">
        INSERT INTO likey VALUES(#{memberId), #{storeId})
    </select>
    <select id="delete" parameterType="Likey">
        DELETE FROM likey WHERE store_id=#{storeId} AND member_id=#{memberId}
    </select>
    <select id="viewLikeStoreList" parameterType="Query" resultType="java.util.List">
        SELECT * FROM likey WHERE #{condition}=#{word}
    </select>
    <select id="viewStore" parameterType="Likey" resultType="Store">
        SELECT * FROM store WHERE store_id=${storeId}
    </select>
</mapper>